{
	"compilerOptions": {
		"target": "ES2017",
		"module": "esnext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist",
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["mocha", "node"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./src/**/*.test.ts"]
}
